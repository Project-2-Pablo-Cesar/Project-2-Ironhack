<div class="modal fade" id="editUser">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
       <div class="modal-header">
        <h4 class="modal-title">Editar usuario</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
       </div>

      <form method="POST" action="/signup">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" placeholder="JonSnow">

        <br><br>

        <label for="email"> Email </label>
        <input type="email" name="email" id="email" placeholder="direction@domain.topleveldomain">
        <br><br>

        <label for="name">Name</label>
        <input id="name" type="name" name="name" placeholder="Your password">



        <input type="submit" value="SAVE">
      </form>

    </div>
  </div>
</div>
<div class="modal fade" id="editService">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
       <div class="modal-header">
        <h4 class="modal-title">Editar servicio</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
       </div>

      <form method="POST" action="/service-creation">
        <label for="title">Title</label>
        <input id="title" type="text" name="title" placeholder="JonSnow">

        <br><br>

        <label for="serviceDescription"> Description </label>
        <input type="serviceDescription" name="serviceDescription" id="serviceDescription" placeholder="serviceDescription">
        <br><br>

        <label for="serviceExpiresDate">Date </label>
        <input id="serviceExpiresDate" type="date" name="serviceExpiresDate" placeholder="serviceExpiresDate">



        <input type="submit" value="SAVE">
      </form>

    </div>
  </div>
</div>
<section>
  <h1>Manage Users</h1>
  {{#each users}}
  <ul>
    <li>
      <h4>{{username}}</h4>
      <p>Role: {{this.role}}</p>
      <form action="/admin/users/{{_id}}/delete" method="POST">
        <input type="hidden" name="userId" value="{{_id}}">
        <button type="submit">Delete</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editUser">
          Editar usuario...
        </button>
      </form>
    </li>
  </ul>
  {{/each}}
  <br>
  <br>
  <br>

  <h1>Manage services</h1>
  {{#each services}}
  <ul>
    <li>
      <h4>{{this.title}}</h4>
      <p> {{user}}</p>
      <form action="/admin/services/{{_id}}/delete" method="POST">
        <input type="hidden" name="userId" value="{{_id}}">
        <button type="submit">Delete</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editService">
          Editar servicio...
        </button>
      </form>
    </li>
  </ul>
  {{/each}}



  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myNewModal">
    Crear nuevo usuario...
  </button>
</section>